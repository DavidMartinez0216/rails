<h1>Update your password</h2>

<%%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

<%%= form_with url: password_path(params[:token]) do |form| %>
  <div>
    <%%= form.password_field :password, required: true, autocomplete: "off", placeholder: "Enter new password", maxlength: 72 %>
  </div>

  <div>
    <%%= form.password_field :password_confirmation, required: true, autocomplete: "off", placeholder: "Repeat new password", maxlength: 72 %>
  </div>

  <%%= form.submit "Sign in" %>
<%% end %>
